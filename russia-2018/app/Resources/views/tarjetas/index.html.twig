{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>Tarjetas list</h1>

            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Amarillas</th>
                    <th>Rojas</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for tarjeta in tarjetas %}
                    <tr>
                        <td><a href="{{ path('tarjetas_show', { 'id': tarjeta.id }) }}">{{ tarjeta.id }}</a></td>
                        <td>{{ tarjeta.amarillas }}</td>
                        <td>{{ tarjeta.rojas }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('tarjetas_show', { 'id': tarjeta.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('tarjetas_edit', { 'id': tarjeta.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('tarjetas_new') }}">Create a new tarjeta</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
