{% extends 'base.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron"><h1>Partidos list</h1>

            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for partido in partidos %}
                    <tr>
                        <td><a href="{{ path('partido_show', { 'id': partido.id }) }}">{{ partido.id }}</a></td>
                        <td>{% if partido.fecha %}{{ partido.fecha|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if partido.hora %}{{ partido.hora|date('H:i:s') }}{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('partido_show', { 'id': partido.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('partido_edit', { 'id': partido.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('partido_new') }}">Create a new partido</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
